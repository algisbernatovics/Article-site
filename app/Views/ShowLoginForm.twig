{% extends "Layout.twig" %}
{% block content %}


    <div class="container flex flex-col justify-center px-5 mx-auto my-8 space-y-8 text-center sm:max-w-md">

        <div class="w-full max-w-xs">
            <form action="/login" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">


                    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                        Email
                    </label>


                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                           name='email' type="email" required="" placeholder="email">


                </div>
                <div class=" mb-6">

                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>

                    {% if loginStatus == false %}
                        <label class="block text-black-400 text-black-400 text-sm font-bold mb-2" for="password">
                            Wrong Email or Password
                        </label>
                    {% endif %}

                    <input name="password" type="password" placeholder="******************" required=""
                           class="shadow appearance-none border border-black-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">
                    <p class="text-black-500 text-xs italic"></p>


                </div>
                <div class="flex items-center justify-between">
                    <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                        Login
                    </button>

                    {#                    <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#"> #}
                    {#                        Forgot Password? #}
                    {#                    </a> #}

                </div>
            </form>

            <p class="text-center text-gray-500 text-xs">
                &copy;2023 HomeGroup Corp. All rights reserved.
            </p>

        </div>
    </div>


{% endblock %}
