{% extends "Layout.twig" %}
{% block content %}
    <div class="dark:bg-black grid place-items-up place-items-center">
    <article class="h-56 content-normal">


    {% for post in posts %}

        <div class="w-full rounded-lg mb-6">


            <figure class=" border-gray-200 rounded-lg
                            dark:bg-gray-800 dark:border-gray-700 ">

                <div>

                    <a href="{{ post.userUrl }}" rel="author"
                       class="text-xl font-bold text-gray-900 dark:text-white">Author:{{ post.userName }}</a>

                </div>

                <img src="https://placehold.co/600x400?text={{ post.title|capitalize }}"
                     alt="post.title">

                <p class="lead">{{ post.body|capitalize }}</p>


                <a href="/editArticleForm/{{ post.id }}" type="submit"
                   class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-2 border border-blue-500 hover:border-transparent rounded">
                    Edit
                </a>
                <a href="/deleteArticle/{{ post.id }}" type="submit"
                   class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-2 border border-blue-500 hover:border-transparent rounded">
                    Delete
                </a>
                <br><br>


                <h2 class="text-lg lg:text-2l font-bold text-gray-900 dark:text-white">Discussions</h2>
                <form action="/addComment/{{ post.id }}" method="post"
                      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                    <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight
                        focus:outline-none focus:shadow-outline"
                            name='title' required="" placeholder="Title">
                    <div class="py-2 px-4 mb-4 bg-white rounded-lg rounded-t-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
                        <label for="comment" class="sr-only">Your comment</label>

                        <textarea name='body' id="comment" rows="6"
                                  class="px-0 w-full text-sm text-gray-900 border-0 focus:ring-0 focus:outline-none dark:text-white dark:placeholder-gray-400 dark:bg-gray-800"
                                  placeholder="Write a comment..." required></textarea>
                    </div>

                    <footer class="flex justify-between items-center mb-2">

                        <br>
                        <button type="submit"
                                class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                            Submit
                        </button>

                    </footer>
                </form>
                <article class=" p-6 bg-white border border-gray-200 rounded-lg shadow
                            dark:bg-gray-800 dark:border-gray-700">

                    {% for comment in comments %}

                        <div class="w-full shadow-lg rounded-lg mb-6 dark:bg-slate-800 hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700
                            shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] p-6 bg-white border border-gray-200 rounded-lg shadow
                            dark:bg-gray-800 dark:border-gray-700">

                            <article class="text-base bg-white rounded-lg dark:bg-gray-900">

                                <a href="{{ comment.userUrl }}" rel="author"
                                   class="text-xl font-bold text-gray-900 dark:text-white">

                                    <p class="inline-flex items-center mr-3 text-gray-900 dark:text-white">
                                        <img
                                                class="mr-2 w-6 h-6 rounded-full"
                                                src="https://180dc.org/wp-content/uploads/2022/04/Blank-Avatar.png"
                                                alt="Michael Gough">{{ comment.userName|capitalize }}</p></a>

                                <p>{{ comment.body|capitalize }}</p>


                                <form action="/deleteComment/{{ comment.commentId }}" method="post"
                                      class="grid">

                                    <button type="submit"
                                            class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-2 border border-blue-500 hover:border-transparent rounded">
                                        Delete
                                    </button>


                                </form>
                                <form action="/editCommentForm/{{ comment.commentId }}" method="post"
                                      class="grid">


                                    <button type="submit"
                                            class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-2 border border-blue-500 hover:border-transparent rounded">
                                        Edit
                                    </button>


                                </form>

                            </article>

                        </div>

                        <br>

                    {% endfor %}
                </article>


            </figure>

        </div>

        </article>

        </div>

    {% endfor %}

{% endblock %}
